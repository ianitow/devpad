{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#292929",
    "activityBar.activeBorder": "#606020",
    "activityBar.background": "#292929",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#606020",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#101010",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#292929",
    "titleBar.activeBackground": "#101010",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#10101099",
    "titleBar.inactiveForeground": "#e7e7e799"
  },

  "files.exclude": {
    "**/.git": true, // this is a default value
    "**/.DS_Store": true, // this is a default value

    "**/node_modules": true, // this excludes all folders
    // named "node_modules" from
    // the explore tree
    "**/public": true, // this excludes all folders
    "**/.vscode": true, // this excludes all folders
    // alternative version
    "node_modules": true // this excludes the folder
    // only from the root of
    // your workspace
  }
}
